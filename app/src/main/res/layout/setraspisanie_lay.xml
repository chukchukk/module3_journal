<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="5dp"
        app:srcCompat="@mipmap/logotype" />
    <EditText
        android:id="@+id/setRaspisanieNumberClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:textColorHint="#AA111111"
        android:paddingHorizontal="10dp"
        android:textSize="25dp"
        android:hint="@string/numberOfClass"/>
    <EditText
        android:id="@+id/setRaspisanieNumberDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/edittextback"
        android:textColorHint="#AA111111"
        android:paddingHorizontal="10dp"
        android:textSize="25dp"
        android:hint="День недели"/>

    <EditText
        android:id="@+id/setRaspisanieFirstSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/edittextback"
        android:textColorHint="#AA111111"
        android:paddingHorizontal="10dp"
        android:textSize="25dp"
        android:hint="1-ый урок"/>
    <EditText
        android:id="@+id/setRaspisanieecondSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/edittextback"
        android:textColorHint="#AA111111"
        android:paddingHorizontal="10dp"
        android:textSize="25dp"
        android:hint="2-ой урок"/>
</LinearLayout>