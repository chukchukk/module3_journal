<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#e9f1ba"
    >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d5dda6"
        android:padding="5dp"
        android:text="Регистрация нового ученика"
        android:textSize="15dp" />
    <EditText
        android:id="@+id/logpup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="login"
        android:textSize="15dp"
        android:layout_below="@id/dialog_title"
        />
    <EditText
        android:id="@+id/passwordpup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textSize="15dp"
        android:layout_below="@id/logpup"
        />
    <EditText
        android:id="@+id/namepup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        android:textSize="15dp"
        android:layout_below="@id/passwordpup"
        />
    <EditText
        android:id="@+id/surnamepup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="surname"
        android:textSize="15dp"
        android:layout_below="@id/namepup"
        />
    <EditText
        android:id="@+id/positionpup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="position"
        android:textSize="15dp"
        android:layout_below="@id/surnamepup"
        />
    <EditText
        android:id="@+id/numberclasspup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of class "
        android:textSize="15dp"
        android:layout_below="@id/positionpup"
        />
    <Button
        android:id="@+id/dialog_positive_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:layout_alignParentRight="true"
        android:background="#dde5ad"
        android:layout_below="@id/numberclasspup"
        />
    <Button
        android:id="@+id/dialog_negative_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отмена"
        android:layout_toLeftOf="@id/dialog_positive_btn"
        android:background="#dde5ad"
        android:layout_marginRight="3dp"
        android:layout_alignBaseline="@id/dialog_positive_btn"
        />
</RelativeLayout>

